<div class="container">
  <h3>Send us a message</h3>

  <%= form_with model: @contact, data: { turbo: false }  do |form| %>
   <%= render 'shared/error_messages', resource: @contact %>

    <div class="field form-group">
      <%= form.hidden_field :nickname %>
    </div>

    <div class="field form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :message %>
      <%= form.text_area :message, size: "70x5", class: "form-control" %>
    </div>
    <div class="pt-2">
      <%= recaptcha_tags %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit "Send Message", class: "btn btn-outline-danger" %>
    </div>
  <% end %>
</div>
